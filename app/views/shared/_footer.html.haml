.form_content
  / = form_tag(group_messages_path, method: :post) do
  %label.upload-label{for: "upload-icon"}
    %i.fa.fa-picture-o
      = file_field_tag :image, id: "upload-icon",style: "display:none"
  %textarea{:placeholder => "type a message",:cols => "140", :name => "text", :rows => "2",:src => "far.fa-image"}
  %input#submit{:type => "submit", :value => "Send"}/

